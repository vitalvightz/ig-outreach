name: IG DM Automation Trigger

on:
  schedule:
    - cron: "*/15 * * * *"  # Every 15 minutes
  workflow_dispatch:       # Allows manual trigger from GitHub

jobs:
  ping-endpoint:
    runs-on: ubuntu-latest

    steps:
      - name: Send POST request to your Render endpoint
        run: |
          curl -X POST https://ig-dm-automation-3i2m.onrender.com/run
